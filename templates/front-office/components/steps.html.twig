{% trans_default_domain 'translations' %}

<section class="section">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="" data-aos="fade-up">
                <h2 class="section-heading">{{ 'front.main.steps.title' | trans }}</h2>
            </div>
        </div>

        <div class="row">
            {%
                include 'front-office/components/step-item-short.html.twig' with {
                    'delay': '',
                    'icon': 'user',
                    'title': 'front.main.steps.short.connect' | trans
                }
            %}

            {%
                include 'front-office/components/step-item-short.html.twig' with {
                    'delay': '100',
                    'icon': 'heart',
                    'title': 'front.main.steps.short.vote' | trans,
                }
            %}

            {%
                include 'front-office/components/step-item-short.html.twig' with {
                'delay': '200',
                'icon': 'check-circle',
                'title': 'front.main.steps.short.confirm' | trans
            }
            %}
        </div>
    </div>
</section>
