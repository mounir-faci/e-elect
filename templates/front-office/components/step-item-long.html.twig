{% set order = order ? order : '0' %}
{% set textPosition = textPosition ? textPosition : 'left' %}
{% set title = title ? title : '' %}
{% set description = description ? description : '' %}
{% set imageUrl = imageUrl ? imageUrl : '' %}

<section class="section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-4 mr-auto order-{{ order }}">
                <h2 class="mb-4">{{ title }}</h2>
                <p class="mb-4">{{ description }}</p>
            </div>
            <div class="col-md-6" data-aos="fade-{{ textPosition }}">
                <img src="{{ imageUrl }}" alt="Image" class="img-fluid">
            </div>
        </div>
    </div>
</section>
