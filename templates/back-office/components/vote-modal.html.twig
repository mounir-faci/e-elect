{% trans_default_domain 'translations' %}
{% set modalId = modalId is defined ? modalId : 'vote' %}
{% set applicationId = applicationId is defined ? applicationId : 0 %}

<div class="modal fade" id="{{ modalId }}Modal" tabindex="-1" role="dialog" aria-labelledby="{{ modalId }}ModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"
                    id="{{ modalId }}ModalLabel">{{ 'back.default.pages.vote.modal.title' | trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>{{ 'back.default.pages.vote.modal.text' | trans }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times mr-1"></i> {{ 'back.default.pages.vote.modal.cancel' | trans }}
                </button>
                <form class="form-inline" method="post" action="{{ path('back.user.application.show', {'application': applicationId}) }}">
                    <input type="hidden" name="token" value="{{ csrf_token('user_vote') }}">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="fas fa-check mr-1"></i> {{ 'back.default.pages.vote.modal.submit' | trans }}
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
