    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'back.default.logout.title' | trans }}</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">{{ 'back.default.logout.text' | trans }}</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">
                    {{ 'back.default.logout.actions.cancel' | trans }}
                </button>
                <a class="btn btn-primary" href="{{ path('logout') }}">
                    {{ 'back.default.logout.actions.logout' | trans }}
                </a>
            </div>
        </div>
    </div>
</div>
