{% extends 'back-office/shared/layout.html.twig' %}
{% trans_default_domain 'translations' %}

{% block content %}
    <h4 class="mt-5 mb-3">{{ 'back.default.pages.statistics.specific.title' | trans }}</h4>
    <div class="row">
        {# @var statistic \App\Model\Statistic #}
        {% for statistic in statistics.userStatistics %}
            {% include 'back-office/components/counting-card.html.twig' with {
                'icon': statistic.icon,
                'color': statistic.color,
                'label': statistic.label,
                'value': statistic.value
            } %}
        {% endfor %}
    </div>

    <h4 class="mt-5 mb-3">{{ 'back.default.pages.statistics.global.title' | trans }}</h4>
    {% if user.administrator %}
        <div class="row">
            {# @var statistic \App\Model\Statistic #}
            {% for statistic in statistics.adminStatistics %}
                {% include 'back-office/components/counting-card.html.twig' with {
                    'icon': statistic.icon,
                    'color': statistic.color,
                    'label': statistic.label,
                    'value': statistic.value
                } %}
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
